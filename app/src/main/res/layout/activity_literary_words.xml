<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@mipmap/board" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <GridView android:gravity="center" android:id="@+id/gri" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp" android:horizontalSpacing="70dp" android:verticalSpacing="70dp" android:stretchMode="columnWidth" android:columnWidth="140dp" android:numColumns="auto_fit" android:layout_weight="15"/>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2">
            <Button android:gravity="center" android:layout_gravity="center"
                android:id="@+id/go" android:background="@mipmap/arrownext"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" android:onClick="go"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
